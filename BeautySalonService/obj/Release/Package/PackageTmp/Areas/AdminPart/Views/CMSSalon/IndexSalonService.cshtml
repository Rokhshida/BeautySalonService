


<div class="modal fade bd-example-modal-lg" id="FormModalServiceAll" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <div class="modal-header">
                <h4 class="modal-title" id="myLargeModalLabel">{{TitleService}}</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <table class="table table-bordered table-striped">

                    <thead>

                        <tr>
                            <th class="text-center">شناسه سرویس</th>
                            <th class="text-center">نام سرویس</th>
                            <th class="text-center">توضیحات</th>
                            <th class="text-center">عکس</th>
                            <th colspan="2" class="text-center"><button type="button" class="btn btn-primary" ng-click="FuncAddService()">افزودن </button></th>
                        </tr>


                    </thead>

                    <tbody>

                        <tr ng-repeat="Item in ListAllSSalonServices">
                            <td>{{Item.IDService}}</td>
                            <td>{{Item.Name}}</td>


                            <td>
                                <p ng-bind-html="Item.Comment | unsafe"></p>
                            </td>


                            <td>
                                <div class="notif-img-agileinfo">
                                    <img style="width:45px !important;height:45px !important;object-fit: cover" ng-src="@Url.Content("~/FileArchives/SalonService/{{Item.PicturePath}}")" alt="...">
                                </div>
                            </td>
                            <td>
                                <input type="button" class="btn btn-primary" value="حذف" ng-click="FuncDeleteService(Item.ID)" />
                            </td>



                        </tr>
                        <tr>
                            <td colspan="11" class="text-center">


                                <input type="button" class="btn btn-primary" value="قبلی" ng-click="ShowLoadingAngularService(PageNumService,PageSizeService,'Prev')" />

                                {{PageNum}}

                                <input type="button" class="btn btn-primary" value="بعدی" ng-click="ShowLoadingAngularService(PageNumService,PageSizeService,'Next')" />
                            </td>
                        </tr>

                    </tbody>




                </table>
            </div>
        </div>
    </div>
</div>
<div class="modal fade bd-example-modal-lg" id="FormModalService" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document" >
        <div class="modal-content">

            <div class="modal-header">
                <h4 class="modal-title" id="myLargeModalLabel">افزودن سرویس</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <form name="myFormService" novalidate ng-submit="submitFormService();">




                    <div class="form-group row">

                        <label for="DrpService" class="col-sm-2 col-form-label">سرویس </label>
                        <div class="col-sm-10">
                            <p>

                                <select id="DrpService" class="form-control" ng-model="formDataService.ID_Service">
                                    <option value="" disabled selected>انتخاب سرویس...</option>
                                    <option dir="rtl" ng-repeat="Item in ListAllService" value="{{Item.ID}}">{{Item.Name}}</option>
                                </select>
                            </p>

                        </div>
                    </div>


                    <div class="form-group row">
                        <label for="editor1Service" class="col-sm-2 col-form-label">توضیحات</label>
                        <div class="col-sm-10">
                            <p>

                                <textarea name="editor1Service" id="editor1Service" rows="10" cols="80" class="ckeditor"></textarea>


                            </p>

                        </div>
                    </div>


                    <div class="form-group row">
                        <label for="dropzone3" class="col-sm-2 col-form-label">تصویر</label>
                        <div class="col-sm-10">
                            <p>
                                <div id="dropzone3" class="dropzone" options="dz_PersImageOptions3" methods="dz_PersImageMethods3" callbacks="dzCallbacks3" ng-dropzone></div>
                            </p>
                        </div>
                    </div>

                    <button type="submit" ng-disabled="myFormService.$invalid" class="btn btn-primary">ذخیره</button>


                </form>
            </div>
        </div>
    </div>
</div>


<h2 class="main-title-w3layouts mb-2 text-center">{{TitleService}}</h2>




<button type="button" class="btn btn-primary" ng-click="FuncAddServiceAll()">افزودن </button>



@section DeclareJS{

    <script src="~/Areas/AdminPart/Scripts/JSSalon/JSSalonService.js"></script>

}






