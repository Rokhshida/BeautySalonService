<!-- services-main -->
<section class="about-w3ls py-md-5 py-3" id="about">
    <div class="container">
        <div class="row py-sm-5 py-3">
            <div class="col-lg-6">
                <div class="wthree-title pb-sm-5 pb-3">
                    <h3 class="agile-title">

                        {{Name}}
                        <br> {{Phone}}
                        <br> {{Address}}
                        <br> {{Manager}}
                        <br> {{CityName}}
                        <span class="title-pos">{{ID_Salon}} کد سالن</span>
                    </h3>
                    <p ng-bind-html="Description | unsafe" class="text-right mt-5"></p>
                </div>

                <img ng-src="@Url.Content("~/FileArchives/Salon/{{PicturePath}}")" alt="{{PicturePath}}" class="img-fluid" />

            </div>
            <div class="col-lg-6 mt-lg-0 mt-5">
                <div class="main-services" ng-repeat="Item in ListAllServicesOfSalon">
                    <div class="row">
                        <div class="col-2">
                            <span class="fas fa-angle-right"></span>
                        </div>
                        <div class="col-10">

                           
                            <h6>{{Item.ID_Service}}</h6>
                            <h5>{{Item.Name}}</h5>
                            <!-- <p><img ng-src="@Url.Content("~/FileArchives/SalonService/{{Item.PicturePath}}")" alt="{{Item.PicturePath}}" class="img-fluid" /></p>-->
                            <p>


                            <p ng-bind-html="Item.Comment | unsafe" class="text-right "></p>
                            @* {{Item.Comment}}*@
                            </p>
                        </div>
                    </div>
                </div>

            </div>


            <input type="button" class="btn btn-light" value="<<" ng-click="FuncGetServicesOfSalon(PageNumSalonsOfService, PageSizeSalonsOfService, 'Prev', ID_Service))" />
            <input type="button" class="btn btn-light" value=">>" ng-click="FuncGetServicesOfSalon(PageNumSalonsOfService, PageSizeSalonsOfService, 'Next', ID_Service))" />
        </div>
    </div>
</section>
